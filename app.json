{
  "expo": {
    "name": "geo-snap",
    "slug": "geo-snap",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "geosnap",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Geo-Snap benötigt Zugriff auf deinen Standort, um Fotos mit ihrem Aufnahmeort zu verknüpfen.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Geo-Snap benötigt Zugriff auf deinen Standort, um Fotos mit ihrem Aufnahmeort zu verknüpfen.",
        "NSPhotoLibraryUsageDescription": "Geo-Snap benötigt Zugriff auf deine Galerie, um Fotos mit Standorten anzuzeigen."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Geo-Snap benötigt Zugriff auf deinen Standort, um Fotos mit ihrem Aufnahmeort zu verknüpfen."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Geo-Snap benötigt Zugriff auf deine Galerie, um Fotos mit Standorten anzuzeigen.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
